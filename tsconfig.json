{   
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2015",
        "lib": [ "ES2015", "DOM" ],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
